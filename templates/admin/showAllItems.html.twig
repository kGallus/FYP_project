{{ include('base.html.twig') }}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Clothes{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        <style>
            #content{
                width: 90%;
                margin: auto;
                justify-content: space-evenly;
            }

            #item_rows{
                display: inline-flex;
                flex-wrap: wrap;
                justify-content: space-evenly;
            }

            #item_rows a{
                width:17%;
                padding: 2%;
            }

            #item_card{

            }

            #item_card p{
                color: black;
                font-size: 1.5rem;

            }

            #item_card img{
                width: 100%;
                border-radius: 1%;
            }

        </style>

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% set bar = 0 %}
        {% set car = 0+bar %}
        <div id="content" style="">
            <div id="item_rows">
            {% for item in item_array %}
                {% set car = car + bar %}
                <a href="http://localhost:8000/Admin/ItemEdit/{{ id[car] }}" style="text-decoration: none;">
                    <div id="item_card" style="">
                        <img src="{{ absolute_url(asset(image[car])) }}" alt="Image Unavailable"/>
                        <p>{{ name[car] }}</p>
                        <p>£{{ price[car] }}</p>
{#                        <p>{{ description[car] }}</p>#}
                {% set bar = 1 %}
                    </div>

                </a>
            {% endfor %}
            </div>
        </div>


        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
